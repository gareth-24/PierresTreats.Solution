@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<h2>Treats</h2>
<hr>

<div class="card"> 
  @if (@Model.Count == 0)
  {
    <p class="lead">No treats have been added yet!</p>
  } 
  else
  {
    <h6 class="card-header">
      <div class="hstack gap-3">
        Available Treats
        @* <div class="vr"></div> *@
        @* Price *@
      </div>
    </h6>
  }

  <ul>
    @foreach(Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
</div>
<hr><br>

<p>@Html.ActionLink("Add new treat", "Create", "Treats", null, new { @class = "btn btn-secondary" })</p>
<p>@Html.ActionLink("Add new flavors", "Create", "Flavors", null, new { @class = "btn btn-secondary" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-secondary" })</p>